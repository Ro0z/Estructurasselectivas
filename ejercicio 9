print("Calcula la suma de divisores.") 
print (" ") 
print("Introduce un numero, y para acabar uno negativo:") 
numero = int( input("Num: "))
while numero > 0 : 
    Suma = 0
for i in range(1,numero+1): 
    if numero % i == 0 :
        Suma = Suma + i
print("\nSALIDA: ") 
print(" ")
print("La suma de los divisores del numero es:", Suma, "\n" )
print("Introduce un numero, y para acabar uno negativo:")
numero = int( input("Num: ")) 